{
  "name": "blueprint-react",
  "private": true,
  "version": "1.0.0",
  "description": "A blueprint for a React + Relay + Redux server-side rendered application.",
  "engines": {
    "node": "~6.3.0"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "flow": "flow",
    "check": "npm run lint && npm run flow",
    "clean": "rm -rf lib build src/build",
    "build:app": "babel-node scripts/build",
    "build:scripts": "babel src --ignore src/report/app,src/build --out-dir lib >/dev/null",
    "build:copy": "cp -R src/build lib && cp -R src/run/templates lib/run",
    "build": "npm run clean && npm run build:app && npm run build:scripts && npm run build:copy",
    "start": "node lib/cli/commands/report/index.js",
    "example:custom": "pushd examples/custom-webpack-config && npm test && popd",
    "dev": "node src/server/dev"
  },
  "bin": {
    "photographer": "./bin/photographer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemonmade/blueprint-react.git"
  },
  "author": "Chris Sauve <chrismsauve@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lemonmade/blueprint-react/issues"
  },
  "babel": {
    "presets": [
      "shopify/node",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/react",
      "plugin:shopify/node",
      "plugin:shopify/flow"
    ],
    "rules": {
      "no-duplicate-imports": "off",
      "no-sync": "off",
      "flowtype/type-id-match": [
        "warn",
        "^([A-Z][a-z0-9]+)*(Type|Props|State|Context)$"
      ],
      "promise/catch-or-return": "off",
      "promise/always-return": "off",
      "node/no-missing-require": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "homepage": "https://github.com/lemonmade/blueprint-react",
  "dependencies": {
    "@lemonmade/react-universal": "file:../react-universal/packages/react-universal",
    "@lemonmade/react-universal-config": "file:../react-universal/packages/react-universal-config",
    "assets-webpack-plugin": "^3.4.0",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "cosmiconfig": "^1.1.0",
    "ejs": "^2.5.1",
    "express": "4.14.0",
    "express-graphql": "^0.5.4",
    "fs-extra": "^0.30.0",
    "globby": "^6.0.0",
    "graphql": "^0.6.2",
    "node-resemble-js": "^0.1.1",
    "phantom": "^2.1.17",
    "react-relay": "^0.9.3",
    "react-router": "^2.8.1",
    "redux": "^3.6.0",
    "serialize-javascript": "1.3.0",
    "ws": "^1.1.1",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "@lemonmade/react-universal-dev": "file:../react-universal/packages/react-universal-dev",
    "autoprefixer": "^6.5.0",
    "babel-cli": "^6.16.0",
    "babel-preset-shopify": "file:../javascript/packages/babel-preset-shopify",
    "babel-relay-plugin": "^0.9.3",
    "eslint": "^3.5.0",
    "eslint-plugin-shopify": "^14.0.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "flow-bin": "^0.33.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "webpack": "2.1.0-beta.19",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.12.1",
    "webpack-node-externals": "1.2.0"
  },
  "peerDependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
