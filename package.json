{
  "name": "react-photographer",
  "version": "0.0.1",
  "description": "A visual regression testing tool for React.",
  "main": "lib/index.js",
  "author": "Chris Sauve",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -watch",
    "ts": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "check": "yarn run ts && yarn run test"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "/tests/.*\\.test\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-loader": "^7.0.0",
    "babel-preset-shopify": "^16.0.2",
    "css-loader": "^0.28.1",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.17.0",
    "ts-jest": "^19.0.14",
    "typescript": "^2.1.4"
  },
  "peerDependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/core-decorators": "^0.10.30",
    "@types/debug": "^0.0.29",
    "@types/express": "^4.0.34",
    "@types/fs-extra": "^3.0.0",
    "@types/glob": "^5.0.30",
    "@types/phantom": "^3.2.1",
    "@types/react": "^15.0.23",
    "@types/react-dom": "^15.5.0",
    "@types/webpack": "^2.2.3",
    "@types/ws": "^0.0.40",
    "@types/yargs": "^6.6.0",
    "assets-webpack-plugin": "^3.5.1",
    "babel-polyfill": "^6.23.0",
    "chalk": "^1.1.3",
    "core-decorators": "^0.18.0",
    "core-js": "^2.4.1",
    "cosmiconfig": "^2.1.1",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "fs-extra": "^3.0.0",
    "glob": "^7.1.1",
    "looks-same": "^3.2.1",
    "node-resemble-js": "^0.2.0",
    "phantom": "^4.0.3",
    "webpack": "^2.2.1",
    "ws": "^2.3.1"
  },
  "optionalDependencies": {}
}
