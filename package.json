{
  "name": "react-photographer",
  "version": "0.0.1",
  "description": "A visual regression testing tool for React.",
  "main": "index.js",
  "author": "Chris Sauve",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "testRegex": "/tests/.*\\.test\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^16.0.2",
    "ava": "^0.17.0",
    "jest": "^18.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "ts-jest": "^18.0.0",
    "typescript": "^2.1.4"
  },
  "peerDependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/core-decorators": "^0.10.30",
    "@types/core-js": "^0.9.35",
    "@types/debug": "^0.0.29",
    "@types/express": "^4.0.34",
    "@types/fs-extra": "^0.0.35",
    "@types/glob": "^5.0.30",
    "@types/phantom": "^0.0.30",
    "@types/react": "^0.14.55",
    "@types/react-dom": "^0.14.19",
    "@types/webpack": "^2.2.3",
    "@types/ws": "^0.0.37",
    "chalk": "^1.1.3",
    "core-decorators": "^0.15.0",
    "core-js": "^2.4.1",
    "cosmiconfig": "^2.1.1",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.1",
    "phantom": "^3.2.1",
    "ws": "^1.1.1"
  }
}
